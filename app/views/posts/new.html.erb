<div class="text-center">
  <h1>新規投稿</h1>
</div>

<%= form_with(model: @post, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  
  <div class="container">
    <div class="row">
      <div class="offset-sm-3 col-sm-6 form-group">
        <%= f.label :猫の名前 %>
        <%= f.text_field :title, class: 'form-control mb-3'%>
        <%= f.label :コメント %>
        <%= f.text_area :comment, class: 'form-control mb-3', rows: 3 %>
        
        <%= f.label "画像をアップロード" %><br><%= f.file_field :image %>

        <%= f.submit '投稿', class: 'btn btn-info btn d-block mx-auto' %>
      </div>
    </div>
  </div>
<% end %>
