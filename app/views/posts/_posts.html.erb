<ul class="list-unstyled">
  <% posts.each do |post| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src=" " alt="">
      <div class="media-body">
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div>
          <p><%= post.title %></p>
          <p><%= post.comment %></p>
        </div>

        <div>
          <% if current_user == post.user %>
            <div class = btn-group>
            <%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除してよろしいですか？" }, class: 'btn btn-danger btn-sm' %>
            </div>
          <% end %>
          <div class = btn-group>
          <%= render 'favorites/favorite_button', post: post %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>