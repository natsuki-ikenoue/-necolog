<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.image? %>
          <%= image_tag user.image.url, class:"mr-2 rounded-circle", size:"50x50" %> 
        <% else %>
          <%= image_tag "noimage.png", class:"mr-2", size:"50x50"%>
        <% end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>